<h1>Friends</h1>
<% if current_user.friend_requests.count > 0 %>
    <h4>Friend Requests</h4>
    <% current_user.friend_requests.each do |request| %>
        <%= "#{request.first_name} #{request.last_name}"%>
        <%= button_to "Accept", friendship_path(request), method: :patch%><br>
    <% end %>
<% end %>

<h4 class="title">Friends</h4>
<% current_user.friends.each do |friend| %>
  <div class="user">
    <p>
      <%= image_tag user_avatar(friend, 20), class: "rounded-circle" %>
      <%= friend.first_name %>
      <%= friend.last_name %>
      <%= link_to "View Profile", user_path(friend), method: :get, :class => "view-profile" %>
    </p>
  </div>
  <% end %>

  <%= link_to "Find Friends", users_path, method: :get, :class => "find-friends" %>
  <%= link_to 'Back', posts_path, :class => "back-button" %>