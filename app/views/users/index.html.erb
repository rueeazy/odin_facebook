<h1>Users</h1>
<% @users.each do |user| %>
  <% next if user == current_user %>
  <div class="user">
    <p>
      <%= user.first_name %>
      <%= user.last_name %>
      <% if !current_user.friend?(user) %>
        <%= link_to "Add Friend", friendships_path(friend_id: user.id), method: :post %>
      <% end %><br/>
    </p>
  </div>
  <% end %>
